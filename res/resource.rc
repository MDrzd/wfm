IDM_MAIN_MENU MENU
BEGIN
    POPUP "File"
    BEGIN
        MENUITEM "Exit", ID_FILE_EXIT
    END
    POPUP "Edit"
    BEGIN
        MENUITEM "Cut", ID_EDIT_CUT
        MENUITEM "Copy", ID_EDIT_COPY
        MENUITEM "Paste", ID_EDIT_PASTE
        MENUITEM "Paste Shortcut", ID_EDIT_PASTE_SHORTCUT
        MENUITEM SEPARATOR
        MENUITEM "Select All", ID_EDIT_SELECT_ALL
    END
    POPUP "View"
    BEGIN
        MENUITEM "Large Icons", ID_VIEW_LARGEICONS
        MENUITEM "Small Icons", ID_VIEW_SMALLICONS
        MENUITEM "List", ID_VIEW_LIST
        MENUITEM "Details", ID_VIEW_DETAILS
    END
    POPUP "Help"
    BEGIN
        MENUITEM "About", ID_HELP_ABOUT
    END
END

CREATEPROCESS_MANIFEST_RESOURCE_ID RT_MANIFEST "Application.manifest"

IDD_INPUT DIALOGEX 0, 0, 239, 61
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
